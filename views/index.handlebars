<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mx-auto h1">Burgers</span>
</nav>



<div class="container">
  <div class="row">
    
    <div class="col offset-4 col-xl-12">
      <img class="myImg" src="../images/Hungry_Face_Emoji_large.png">

    </div>

  </div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col col-xl-3 box">

      <h2 class="headerr">You can still eat this!</h2>
      <ul class="list">
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}

          <form action="/api/burgers/{{id}}" method="POST">

            <button class="btn btn-warning" type="submit">
              {{#if devoured}}Sorry it's eaten{{else}}Devour It!{{/if}}
            </button>

          </form>
        </li>

        {{/unless}}
        {{/each}}
      </ul>


    </div>


    <div class="col offset-6 col-xl-3 box">
      <h2 class="headerr">Devoured Burgers</h2>
      <ul class="list">


        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}

        </li>

        {{/if}}
        {{/each}}
      </ul>


    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col col-xl-12 box2">
    

        <h2>Add a Burger</h2>
      <form class="create-form" action="burgers/create" method="POST">

        <div class="form-group">
          <label>Burger Name:</label>
          <input type="text" name="burger_name">
        </div>

        <button class="btn btn-warning" type="submit">Add Burger</button>
      </form>






    </div>
  </div>
</div>